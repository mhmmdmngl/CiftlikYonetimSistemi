<script>
	function kapiAc(id)
	{
		$.ajax({
			url: "/Hayvan/kapiTetikle",
			dataType: "json",
			type: "POST",
			async: false,
			data: {
				"kapiId": id
			},
			success: function (returnData) {

				if (returnData["status"] == "error" || returnData["status"] == "-1") {
					return false;
					

				}
				return true;
				
			}
		});

	}
</script>